/*
 * Aider CE TUI Styles
 *
 * Uses Textual theme variables for consistent theming.
 * Theme defined in app.py (AIDER_THEME).
 */

* {
   background: $background;
}

Screen {
    background: $background;
    layout: vertical;
    padding: 0;
    margin: 0;
    border: none;    
}

/* Output area */
#output {
    height: 1fr;
    width: 100%;
    background: $background;
    padding: 0 1;
    margin: 0;
    scrollbar-background: $background;
    scrollbar-color: $surface;
    scrollbar-size: 1 1;
}

/* Input area - floating card style */
#input {
    height: 5;
    background: $surface;
    border: round $secondary;
    padding: 1 2;
    margin: 0 1 1 1;
}

#input:focus {
    background: $surface;
}

/* Footer - same background as everything else */
#footer {
    height: 1;
    width: 100%;
    background: $background;
    color: $accent;
    padding: 0 1;
}

/* Generic Input and TextArea styling */
Input, TextArea {
    background: $background;
    border: none;
}

Input:focus, TextArea:focus {
    border: none;
    background: $background;
}

Input > .input--placeholder {
    color: $secondary;
}
